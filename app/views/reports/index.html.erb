<style>
  .custom-button {
    background-color: #365486 !important;
    color: white !important;
    width: 20%;
    margin-bottom: 25px;
    text-align: center;
  }

  .custom-button:hover {
    background-color: #365486 !important;
    color: white !important;
    opacity: 0.8;
    
  }
   
</style>

   <div class="content">

    <div style="text-align: left; margin-top:100px">
  <h1>Reports</h1>
  
  
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Tasks</th>
        <th>Duration</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td><%= report.report_date %></td>
          <td><%= report.tasks %></td>
          <td><%= display_duration(report) %></td>
          <td><%= report.status ? 'Completed' : 'In Progress' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
 <div style="position: absolute; top: 130px; right: 10px;">
      <%= link_to "Add Workreport", new_report_path, style: "color: white; text-decoration: none; padding: 10px; background-color: #365486; border-radius: 5px;" %>

    </div>
